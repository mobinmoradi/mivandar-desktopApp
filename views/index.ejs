<%- include('./includes/head.ejs') -%>
    <style>
        body {
            overflow: hidden;
        }

        .under {
            width: 100%;
            height: 100%;

            background-image: url("../img/bg<%=bg%>.jpg");
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            position: absolute;
            z-index: -2;
        }
    </style>

    <div class="login d-f">
        <div class="under"></div>
        <div class="background"></div>
        <div class="login-1">
            <div class="logo">
                <div class="flex">
                    <img src="../img/icon.png">
                    <h2 class="pe-1 text-logo">میواندار</h2>
                </div>
                <p class="under-logo">سامانه مدیریت رزرواسیون مهمانسرا</p>
            </div>

            <form action="/users/new" method="post">
                <div class="w-full">
                    <h2 class="text-center f-b">ورود</h2>
                </div>
                <div>
                    <p class="mt-3">برای اتصال به سیستم وارد شوید.</p>
                    <div class="mt-3">
                        <label class="required" for="input-text">نام کاربری</label>


                        <input type="text" autofocus class="mt-2" id="input-text" name="userName">
                        <!-- if(userName !=""){ %> value= userName %> } %>-->
                    </div>
                    <div class="mt-3">
                        <label class="required" for="input-password">کلمه عبور</label>
                        <input type="password" class="mt-2" id="input-password" name="password" value="">
                    </div>
                    <button type="submit" class="btn btn-blue btn-big mt-20">ورود</button>
                </div>
            </form>


        </div>
        <div class="logo-phone"><a href="/public/about"><i class="bx bxs-phone-call "></i></a></div>
    </div>
    <%- include('./includes/foot.ejs') -%>